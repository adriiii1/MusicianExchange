<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NuevoAnuncioConcierto" android:background="@color/bg_register">

    <Button
            android:text="Enviar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btInsVenta"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" style="@style/Widget.AppCompat.Button.Colored"
            android:textColor="@color/bg_register"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/txtGrupoConcierto"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@android:color/white"
            android:textColorHint="@color/colorAccent" android:hint="Grupo"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/txtLugar" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txtGrupoConcierto" android:textColor="@android:color/white"
            android:hint="Lugar" android:textColorHint="@color/colorAccent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/txtFecha"
            android:hint="Fecha" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="183dp"
            android:layout_marginRight="183dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txtLugar" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/txtPrecio"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/txtPrecio"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:textColor="@android:color/white"
            android:hint="Precio" android:textColorHint="@color/colorAccent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txtFecha" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="182dp" android:layout_marginRight="182dp"/>
    <Button
            android:text="Cartel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btSelCartel"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="88dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" style="@style/Widget.AppCompat.Button.Colored"
            android:textColor="@color/bg_register"/>

</android.support.constraint.ConstraintLayout>