<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="5dp">
<android.support.v7.widget.CardView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_weight="8">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp" android:id="@+id/txtUsuarioMensaje" android:textStyle="bold"
                android:text="Nombre" android:layout_marginLeft="10dp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/txtCuerpoMensaje" android:text="afsfaf"
                android:layout_marginLeft="10dp" android:layout_marginBottom="5dp"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
</LinearLayout>